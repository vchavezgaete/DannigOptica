{
  "name": "dannig-backend",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "dev:debug": "ts-node-dev --inspect=9229 --respawn src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "seed:demo": "ts-node scripts/seed-demo-data.ts",
    "generate:clients": "ts-node scripts/generate-test-clients.ts",
    "generate:sales": "ts-node scripts/generate-sales-data.ts",
    "generate:products": "ts-node scripts/generate-products.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@prisma/client": "^6.17.1",
    "bcrypt": "^5.1.1",
    "fastify": "^4.29.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.24",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "prisma": "^6.17.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
