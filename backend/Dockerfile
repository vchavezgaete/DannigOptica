# Backend Dockerfile para Dannig Ã“ptica
FROM node:18-alpine

# Establecer directorio de trabajo
WORKDIR /app

# Dependencias del sistema requeridas por Prisma y espera de DB
RUN apk add --no-cache openssl libc6-compat netcat-openbsd curl

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar solo fuentes necesarias para build
COPY tsconfig.json ./
COPY prisma ./prisma
COPY src ./src

# Generar cliente de Prisma
RUN npx prisma generate

# Compilar TypeScript a dist
RUN npm run build

# Copiar scripts de inicializaciÃ³n
COPY scripts/init.sh ./scripts/init.sh
COPY scripts/start-production.sh ./scripts/start-production.sh
COPY scripts/validate-env.sh ./scripts/validate-env.sh
COPY scripts/fix-database-url.sh ./scripts/fix-database-url.sh
RUN chmod +x ./scripts/init.sh ./scripts/start-production.sh ./scripts/validate-env.sh ./scripts/fix-database-url.sh

# Exponer puerto
EXPOSE 3001

# Variables de entorno por defecto
ENV NODE_ENV=production
ENV PORT=3001

# Comando de inicializaciÃ³n con validaciÃ³n integrada
CMD echo 'ğŸš€ Iniciando DannigOptica Backend...' && \
    ./scripts/fix-database-url.sh && \
    echo 'ğŸ” Validando variables de entorno...' && \
    if [ -z "$DATABASE_URL" ]; then echo 'âŒ ERROR: DATABASE_URL no estÃ¡ configurada' && exit 1; else echo 'âœ… DATABASE_URL configurada'; fi && \
    if [ -z "$NODE_ENV" ]; then echo 'âš ï¸ WARNING: NODE_ENV no estÃ¡ configurada, usando development' && export NODE_ENV=development; else echo 'âœ… NODE_ENV: '$NODE_ENV; fi && \
    if [ -z "$PORT" ]; then echo 'âš ï¸ WARNING: PORT no estÃ¡ configurada, usando 3001' && export PORT=3001; else echo 'âœ… PORT: '$PORT; fi && \
    if [ -z "$JWT_SECRET" ]; then echo 'âŒ ERROR: JWT_SECRET no estÃ¡ configurada' && exit 1; else echo 'âœ… JWT_SECRET configurada'; fi && \
    echo 'ğŸ¯ Todas las variables de entorno estÃ¡n configuradas correctamente' && \
    echo 'ğŸ“Š Verificando configuraciÃ³n de base de datos...' && \
    if echo "$DATABASE_URL" | grep -q "postgresql"; then \
        echo 'ğŸ˜ PostgreSQL detectado' && \
        echo 'âš™ï¸ Generando cliente Prisma para PostgreSQL...' && \
        npx prisma generate --schema=./prisma/schema.prisma && \
        echo 'ğŸ”„ Aplicando migraciones a PostgreSQL...' && \
        npx prisma db push --accept-data-loss --schema=./prisma/schema.prisma && \
        echo 'âœ… MigraciÃ³n PostgreSQL completada exitosamente'; \
    else \
        echo 'ğŸ¬ MySQL detectado' && \
        echo 'âš™ï¸ Generando cliente Prisma para MySQL...' && \
        npx prisma generate --schema=./prisma/schema.prisma && \
        echo 'ğŸ”„ Sincronizando schema MySQL...' && \
        npx prisma db push --accept-data-loss --schema=./prisma/schema.prisma && \
        echo 'âœ… Schema MySQL sincronizado exitosamente'; \
    fi && \
    echo 'ğŸ¯ Iniciando servidor Node.js...' && \
    node dist/server.js
