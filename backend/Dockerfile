# Backend Dockerfile para Dannig Ã“ptica
FROM node:18-alpine

# Establecer directorio de trabajo
WORKDIR /app

# Dependencias del sistema requeridas por Prisma y espera de DB
RUN apk add --no-cache openssl libc6-compat netcat-openbsd curl

# Copiar package.json y package-lock.json
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar solo fuentes necesarias para build
COPY tsconfig.json ./
COPY prisma ./prisma
COPY src ./src

# Generar cliente de Prisma
RUN npx prisma generate

# Compilar TypeScript a dist
RUN npm run build

# Exponer puerto
EXPOSE 3001

# Variables de entorno por defecto
ENV NODE_ENV=production
ENV PORT=3001

# Comando de inicializaciÃ³n robusto integrado
CMD ["sh", "-c", "echo 'ğŸš€ Iniciando DannigOptica Backend...' && echo 'ğŸ“Š Verificando configuraciÃ³n de base de datos...' && if [[ \"$DATABASE_URL\" == *\"postgresql\"* ]] || [[ \"$NODE_ENV\" == \"production\" ]]; then echo 'ğŸ˜ PostgreSQL detectado en producciÃ³n' && echo 'âš™ï¸ Generando cliente Prisma para PostgreSQL...' && npx prisma generate --schema=./prisma/schema.prisma && echo 'ğŸ”„ Aplicando migraciones a PostgreSQL...' && for i in {1..3}; do echo \"Intento \$i de migraciÃ³n...\"; if npx prisma db push --accept-data-loss --schema=./prisma/schema.prisma; then echo 'âœ… MigraciÃ³n PostgreSQL completada exitosamente'; break; else echo \"âŒ Intento \$i fallÃ³, reintentando...\"; sleep 5; fi; done; else echo 'ğŸ¬ MySQL detectado en desarrollo' && echo 'â³ Intentando conectar a MySQL...' && timeout 30 sh -c 'until nc -z mysql 3306; do echo \"â³ Esperando MySQL...\"; sleep 2; done' && echo 'âœ… MySQL disponible' && echo 'âš™ï¸ Generando cliente Prisma para MySQL...' && npx prisma generate --schema=./prisma/schema.prisma && echo 'ğŸ”„ Sincronizando schema MySQL...' && npx prisma db push --accept-data-loss --schema=./prisma/schema.prisma && echo 'âœ… Schema MySQL sincronizado exitosamente'; fi && echo 'ğŸ¯ Iniciando servidor Node.js...' && node dist/server.js"]
