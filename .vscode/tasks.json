      "detail": "Arranca Fastify con ts-node-dev"
    },
    {
      "label": "backend:dev:debug",
      "type": "npm",
      "script": "dev:debug",
      "path": "backend",
      "detail": "Arranca Fastify en modo debug (inspector 9229)"
    },
    {
      "label": "frontend:dev",
      "type": "npm",
      "script": "dev",
      "path": "frontend",
      "detail": "Arranca Vite"
    }
  ]
}
