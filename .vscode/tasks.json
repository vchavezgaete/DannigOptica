{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker:up",
      "type": "shell",
      "command": "docker compose up -d",
      "options": { "cwd": "${workspaceFolder}/infra" },
      "detail": "Levanta MySQL + Adminer"
    },
    {
      "label": "docker:down",
      "type": "shell",
      "command": "docker compose down",
